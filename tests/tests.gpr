with "config/tests_config.gpr";
project Tests is
   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "src";
   for Main use ("bcdag.adb","bmpqr.adb","pbm128.adb","pbmmsi.adb","pbmqr.adb","svg128.adb","svgqr.adb","svgupc.adb");

   package Compiler is
      for Default_Switches ("Ada") use Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;
end Tests;
